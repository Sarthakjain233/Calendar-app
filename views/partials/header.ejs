<!DOCTYPE html>
<html>
	<head>
		<!-- Make site responsive on mobile/tablet -->
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<script src="https://apis.google.com/js/platform.js" async defer></script>
		<!--Bootstrap4 -->
		 <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
		 <link rel="stylesheet" href="../stylesheets/app.css"> 
	</head>
<body>
	<nav class="navbar navbar-expand-md navbar-dark bg-dark">
		<div class ="container">
		<a class="navbar-brand" href="/">Calendar</a>
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" 
					aria-expanded="false" aria-label="Toggle navigation">
					 <span class="navbar-toggler-icon"></span>
					</button>
				<div class="collapse navbar-collapse" id="navbarNav">
					<ul class="navbar-nav ml-auto">
						 <% if(!currentUser){ %>
						  <li class="<%= typeof page !== 'undefined' && page === 'login' ? 'active' : '' %> navbar-item">
					  		<a href="/login" class="nav-link navbar-brand">Login</a>
					      </li>
						   <li class="<%= typeof page !== 'undefined' && page === 'register' ? 'active' : '' %> navbar-item">
							   <a href="/register" class="nav-link navbar-brand">Sign Up</a>
						   </li>
						 <% } else { %>
						   <li class="navbar-item">Signed In As<a href="#" class="nav-link navbar-brand"><%= currentUser.username %></a></li>
					  	   <li class="nav-item"><a href="/logout" class="nav-link navbar-brand">Logout</a></li>
						<% } %>
					 </ul>
				</div>
		</div>
		</nav>
		
		<div class="container">
			<% if(error && error.length>0){ %>
				<div class="alert alert-danger" role="alert">
				   <%= error %>
				</div>
			<% } %>
			<% if(success && success.length>0){ %>
				<div class="alert alert-success" role="alert">
				   <%= success %>
				</div>
			<% } %>
		</div>
	
