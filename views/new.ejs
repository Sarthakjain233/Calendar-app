<%- include("partials/header") %>
<h1 class="text-center mt-2 mb-3">Create A New Event</h1>
	<div class="row">
		<div style="width: 70%; margin: 0 auto;">
			<form action="https://calendar.google.com/" method="POST">
				<div class="form-group">
						<label for="name">Event Name</label>
						<input class="form-control mb-2" type="text" name="name" placeholder="new event">
				</div>
				<div class="form-group">
						<label for="name">Date</label>
						<input class="form-control mb-2" type="date" name="date">
				</div>
				<div class="form-group">
						<label for="name">Description</label>
						<input class="form-control mb-2" type="text" name="desc">
				</div>
				<div class="form-group">
						<button class="btn btn-lg btn-primary btn-block">
							Submit!
						</button>
				</div>
				
<%- include("partials/footer") %>